<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/src/styles/styles.css" rel="stylesheet" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <script src="/src/views/js-script/admin.js" defer></script>
    <title>Lumina Indonesia - Admin Dashboard</title>
  </head>
  <body>
    <header>
      <div class="nav-container">
        <nav class="nav-level">
          <div class="nav-left">
            <a class="nav-link" href="/"><p class="logo-name">Lumina</p></a>
          </div>
          <div class="nav-middle"></div>
          <div class="nav-right">
            <ul>
              <a class="nav-button" href="/">Back to Home</a>
            </ul>
          </div>
        </nav>
      </div>
    </header>
    <section class="admin-menus">
      <div class="products-menu">
        <div class="edit-product">
          <p class="admin-menu-title">Product Management Dashboard</p>
          <div class="add-product">
            <button id="openAddProductModal">
              <i class="fas fa-plus-circle"></i> Add New
            </button>
          </div>
          <table class="products-table">
            <thead>
              <tr>
                <th>Brand</th>
                <th>Name</th>
                <th>Stock</th>
                <th>Price</th>
                <th>Image</th>
                <th>Modify</th>
              </tr>
            </thead>
            <tbody class="product-table-body">
              <!-- This table section will be automatically filled by the admin.js script file -->
            </tbody>
          </table>
        </div>
      </div>
      <div class="orders-menu"></div>
      <div class="admin-menu"></div>
    </section>
    <footer>
      <section class="social-media">
        <div class="social-media-section">
          <div class="social-media-level">
            <div class="social-media-left">
              <p class="logo-name">Lumina</p>
              <p class="tag-line">
                Your One-Stop Shop for Radiant Skin and Beauty
              </p>
            </div>
            <div class="social-media-right">
              <a href="#" target="_blank"><i class="fab fa-facebook-f"></i></a>
              <a href="#" target="_blank"><i class="fab fa-instagram"></i></a>
              <a href="#" target="_blank"><i class="fab fa-youtube"></i></a>
              <a href="#" target="_blank"><i class="fab fa-twitter"></i></a>
            </div>
          </div>
        </div>
      </section>
    </footer>
    <!-- These Modals are for pop up menu or notifications -->
    <!-- Add Product Modal -->
    <div id="addProductModal" class="modal">
      <div class="modal-content">
        <span class="close">&times;</span>
        <form id="add-product-form">
          <p class="modal-title">Add Product</p>
          <div class="form-row">
            <label for="brand_name">Brand Name</label>
            <input
              type="text"
              id="brand_name"
              name="brand_name"
              class="form-input"
              required
            />
          </div>
          <div class="form-row">
            <label for="product_name">Product Name</label>
            <input
              type="text"
              id="product_name"
              name="product_name"
              class="form-input"
              required
            />
          </div>
          <div class="form-row">
            <label for="stock_amount">Stock Amount</label>
            <input
              type="number"
              id="stock_amount"
              name="stock_amount"
              class="form-input"
              required
            />
          </div>
          <div class="form-row">
            <label for="product_price">Price</label>
            <input
              type="number"
              id="product_price"
              name="product_price"
              class="form-input"
              required
            />
          </div>
          <div class="form-row">
            <label for="product_image_url">Image File Name</label>
            <input
              type="text"
              id="product_image_url"
              name="product_image_url"
              class="form-input"
              required
            />
          </div>
          <div class="submit-button-div">
            <button type="submit" class="submit-button">Add Product</button>
          </div>
        </form>
      </div>
    </div>
    <!-- Edit Product Modal -->
    <div id="editProductModal" class="modal">
      <div class="modal-content">
        <span class="close">&times;</span>
        <form id="edit-product-form">
          <p class="modal-title">Edit Product</p>
          <input type="hidden" id="edit_product_id" name="product_id" />
          <div class="form-row">
            <label for="edit_brand_name">Brand Name</label>
            <input
              type="text"
              id="edit_brand_name"
              name="brand_name"
              class="form-input"
            />
          </div>
          <div class="form-row">
            <label for="edit_product_name">Product Name</label>
            <input
              type="text"
              id="edit_product_name"
              name="product_name"
              class="form-input"
            />
          </div>
          <div class="form-row">
            <label for="edit_stock_amount">Stock Amount</label>
            <input
              type="number"
              id="edit_stock_amount"
              name="stock_amount"
              class="form-input"
            />
          </div>
          <div class="form-row">
            <label for="edit_product_price">Price</label>
            <input
              type="number"
              id="edit_product_price"
              name="product_price"
              class="form-input"
            />
          </div>
          <div class="form-row">
            <label for="edit_product_image_url">Image File Name</label>
            <input
              type="text"
              id="edit_product_image_url"
              name="product_image_url"
              class="form-input"
            />
          </div>
          <div class="submit-button-div">
            <button type="submit" class="submit-button">Save Changes</button>
          </div>
        </form>
      </div>
    </div>
    <!-- Delete Confirmation Modal -->
    <div id="deleteConfirmationModal" class="modal">
      <div class="modal-content">
        <div class="modal-title">Confirm Deletion</div>
        <p>Are you sure you want to delete this product?</p>
        <div class="submit-two-button-div">
          <button id="confirmDelete" class="confirm-btn">Delete</button>
          <button id="cancelDelete" class="cancel-btn">Cancel</button>
        </div>
      </div>
    </div>
    <!-- Notification Modal -->
    <div id="notification" class="notification">
      <div class="message">
        <span class="icon">✔️</span>
        <span id="notification-message"></span>
        <span class="close" onclick="closeNotification()">&times;</span>
      </div>
    </div>
  </body>
</html>
